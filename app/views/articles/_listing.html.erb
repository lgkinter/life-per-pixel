<% @articles.each do |article| %>
  <div class='post' id= <%= "post_#{article.id}" %> title= "<%= article.hover_text %>" >
    <%= image_tag article.image.url(:medium) %>
    <h1><%= link_to article.title, article_path(article), class: 'article_title' %></h1>
    <p>
      <%= article.intro %>
      <%= link_to "read more", article_path(article) %>
    </p>
  </div>
<% end %>
