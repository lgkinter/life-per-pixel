
<div id= <%= "post_#{@article.id}" %> title= "<%= @article.hover_text %>" >
  <%= image_tag @article.image.url(:original) %>
  <h1><%= @article.title %></h1>
  <p>
    Tags:
    <% @article.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag.name) %>
    <% end %>
  </p>
  <p><%= raw textile @article.body %></p>
</div>
<br>

<h2>Let Us Know Your Thoughts!</h2>
<h3><%= @article.comments.size %> Comments</h3>
<hr>
<div class="comment-section">
  <%= render partial: 'articles/comment' %><br>
  <%= render partial: 'comments/form' %><br>
</div>

<% if logged_in? %>
  <%= link_to "Edit pixel", edit_article_path(@article) %><br>
  <%= link_to "Delete pixel", article_path(@article), method: :delete, data: {confirm: "Are you sure that you want to delete this post?"} %>
  <br><br>
<% end %>
<%= link_to "<< Home", articles_path %>
