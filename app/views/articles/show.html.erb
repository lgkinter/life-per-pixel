
<div id= <%= "post_#{@article.id}" %> title= "<%= @article.hover_text %>" >
  <%= image_tag @article.image.url(:original) %>
  <h1><%= @article.title %></h1>
  <p><%= raw textile @article.body %></p><br>
  <p class="tags">
    Tags
    <% @article.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag.name) %>
    <% end %>
  </p>
</div>
<hr>
<%= render partial: 'prevnext' %>
<br><br>
<div class="comment-section">
  <h2>Let Us Know Your Thoughts!</h2>
  <%= render partial: 'disqus' %>
</div>

