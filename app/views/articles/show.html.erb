
<div id= <%= "post_#{@article.id}" %> title= "<%= @article.hover_text %>" >
  <%= image_tag @article.image.url(:original) %>
  <h3><%= @article.title %></h3>
  <p>
    Tags:
    <% @article.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag.name) %>
    <% end %>
  </p>
  <p><%= @article.body %></p>
</div>
<br>
<h4>Comments (<%= @article.comments.size %>)</h4>
<%= render partial: 'articles/comment', collection: @article.comments %><br>
<%= render partial: 'comments/form' %><br>
<% if logged_in? %>
  <%= link_to "Edit post", edit_article_path(@article) %><br>
  <%= link_to "Delete post", article_path(@article), method: :delete, data: {confirm: "Are you sure that you want to delete this post?"} %>
  <br><br>
<% end %>
<%= link_to "<< Home", articles_path %>
